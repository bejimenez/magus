# Application
APP_NAME="Name Generator API"
API_V1_PREFIX="/api/v1"

# Database
DATABASE_URL="sqlite:///./name_generator.db"

# Generation Settings
MAX_NAME_LENGTH=12
MIN_NAME_LENGTH=3
DEFAULT_COUNT=1
MAX_COUNT=20

# Performance
MIN_SCORE_THRESHOLD=0.6
CACHE_TTL=3600

# Optional Redis
USE_REDIS=false
REDIS_URL="redis://localhost:6379"
